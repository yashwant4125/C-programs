#include<stdio.h>
#include<math.h>
#define MAX 20
int stack[MAX];
int top=0;
void push(int val){
	stack[top++]=val;	
}
int pop(){
	return stack[--top];
}
int main(){
	char postfix[20],ch;
	int i=0,val1,val2,result;
	printf("Enter the postfix expression to evaluate it: ");
	scanf("%s",postfix);
	printf("\nThe postfix expression is: %s\n",postfix);
	ch=postfix[i];
	while(ch!='\0'){
		if(ch=='+' || ch=='-' || ch=='/' || ch=='*' || ch=='^'){
			val2=pop();
			val1=pop();
			switch(ch){
				case '+': result=val1+val2; break;
				case '-': result=val1-val2; break;
				case '/': result=val1/val2; break;
				case '*': result=val1*val2; break;
				case '^': result=pow(val1,val2); break;
			}
			push(result);
		}
		else
		push((int)ch-48);
		ch=postfix[++i];				
	}
	printf("\nThe result is: %d",pop());
}
